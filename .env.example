# Fantasy Football Analysis - Environment Configuration
# Copy this file to .env and customize as needed

# API server
API_HOST=0.0.0.0
API_PORT=8000

# CORS allowed origins (comma-separated, use "*" for development)
CORS_ORIGINS=*
# Enable credentialed CORS requests (requires explicit non-wildcard CORS_ORIGINS)
CORS_ALLOW_CREDENTIALS=false

# Database path
DB_PATH=backend/database/data/nfl_cache.db

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=DEBUG
# Console log level (DEBUG, INFO, WARNING, ERROR)
LOG_CONSOLE_LEVEL=INFO
# Log output root directory (contains errors/, timing/)
LOG_DIR=logs
# Rotation cadence for log files (S, M, H, D, W0-W6, or midnight)
LOG_ROTATION_WHEN=midnight
# Rotation interval count for LOG_ROTATION_WHEN
LOG_ROTATION_INTERVAL=1
# Number of rotated files to keep
LOG_BACKUP_COUNT=14

# Enable/disable timing instrumentation logs
TIMING_ENABLED=true
# Number of per-run timing log files to keep (<=0 keeps all)
TIMING_RUN_LOGS_KEEP=30
